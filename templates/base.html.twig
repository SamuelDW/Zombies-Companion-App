<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="A companion for your zombies!!! board game.">
        <meta name="author" content="Samuel Durrant-Walker">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Zombies!!!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
           {{ encore_entry_link_tags('main') }}
        {% endblock %}

        
    </head>
    <body>
        {% block body %}

        {{ dump(is_granted('IS_AUTHENTICATED_ANONYMOUSLY'))}}
        {{dump(app.request.getBaseURL)}}
        <h1> Stuff </h1>
        {% if not app.user %}
        {{ include('forms/registration_form.html.twig') }}
        {% endif %}
        {% endblock %}

        {% block javascripts %}
            
            {{ encore_entry_script_tags('main') }} 
            {% if not app.user %}
            {{ encore_entry_script_tags('form') }}
            {{ encore_entry_script_tags('registrationForm')}}
            {% endif %}
        {% endblock %}
    </body>
</html>
